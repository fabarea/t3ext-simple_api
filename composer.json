{
  "name": "causal/simple_api",
  "type": "typo3-cms-extension",
  "description": "Service to route HTTP/REST requests to your own TYPO3 controllers.",
  "keywords": [
    "TYPO3 CMS",
    "api"
  ],
  "homepage": "https://github.com/xperseguers/t3ext_simple_api",
  "support": {
    "issues": "https://github.com/xperseguers/t3ext_simple_api/issues"
  },
  "authors": [
    {
      "name": "Xavier Perseguers",
      "email": "xavier@causal.ch",
      "homepage": "https://www.causal.ch",
      "role": "Developer"
    }
  ],
  "license": "GPL-2.0+",
  "require": {
    "php": ">= 5.5.0, <= 7.1.99",
    "typo3/cms-core": ">= 7.6.0, <= 8.9.99"
  },
  "autoload": {
    "psr-4": {
      "Causal\\SimpleApi\\": "Classes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Causal\\SimpleApi\\Tests": "Tests/"
    }
  },
  "replace": {
    "simple_api": "self.version",
    "typo3-ter/simple-api": "self.version"
  },
  "config": {
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin"
  },
  "scripts": {
    "post-autoload-dump": [
      "mkdir -p .Build/Web/typo3conf/ext/",
      "[ -L .Build/Web/typo3conf/ext/simple_api ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/simple_api"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    },
    "typo3/cms": {
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": ".Build/Web"
    }
  }
}
